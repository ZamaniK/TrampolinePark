@model ForcedDemo.Areas.Dashboard.ViewModels.ActivityTypeListingModel

@if (Model != null && Model.ActivityTypes != null && Model.ActivityTypes.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var activityType in Model.ActivityTypes)
            {
                <tr>
                    <td>
                        @activityType.Name
                    </td>
                    <td>
                        @activityType.Description
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationTypes", new { ID = activityType.ID})" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationTypes", new { ID = activityType.ID})" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="far fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning" role="alert">
        Sorry! There are no available records.
    </div>
}