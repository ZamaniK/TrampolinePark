<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Bounce</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Dashboard/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Areas/Dashboard/Content/css/simple-sidebar.css" rel="stylesheet" />
    <script src="~/Areas/Dashboard/Content/vendor/jquery/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/6831f52cbb.js" crossorigin="anonymous"></script>


    <script src="~/Areas/Dashboard/Content/vendor/jquery/jquery.min.js"></script>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-building mr-1"></i> Bounce
            </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "AccomodationTypes", "AccomodationTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-person-booth mr-1"></i> Facility Types
                </a>
                <a href="@Url.Action("Index", "AccomodationPackages", "AccomodationPackages")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-box-open"></i> Facility Packages
                </a>
                <a href="@Url.Action("Index", "ActivityTypes", "ActivityTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-person-booth mr-1"></i> Activity Types
                </a>
                <a href="@Url.Action("Index", "Activities", "Activities")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-box-open"></i> Activities
                </a>
                <a href="@Url.Action("Index", "Accomodations", "Accomodations")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-map-pin mr-1"></i> Facilities
                </a>
                <a href="@Url.Action("Index", "PackageBookings", "PackageBookings")" class="list-group-item list-group-item-action bg-light">
                    <i class="fa fa-address-book mr-1"></i> Facility Bookings
                </a>
                <a href="@Url.Action("Index", "ActivityBookings", "ActivityBookings")" class="list-group-item list-group-item-action bg-light">
                    <i class="fa fa-address-book mr-1"></i> Activity Bookings
                </a>
                <a href="@Url.Action("Index", "PackageTimes", "PackageTimes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-calendar-alt mr-1"></i> Facility Times
                </a>
                <a href="@Url.Action("Index", "ActivityTimes", "ActivityTimes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-calendar-alt mr-1"></i> Activity Times
                </a>
                <a href="@Url.Action("Index", "TimePackage", "TimePackage")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-clock mr-1"></i> Time Facility Package
                </a>
                <a href="@Url.Action("Index", "TimeActivity", "TimeActivity")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-clock mr-1"></i> Time Activity
                </a>
                <a href="@Url.Action("Index", "Roles")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i> Roles
                </a>

                <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users mr-1"></i> Users
                </a>
                <a href="/adminshop/dashboard" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-store mr-1"></i> Shop
                </a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="fas fa-sign-out-alt mr-1"></i> Logout
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>

            <div class="container-fluid">

                @RenderBody()


            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Areas/Dashboard/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
